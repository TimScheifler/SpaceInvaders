<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.madproject.spaceinvaders">

    <application
        android:allowBackup="true"
        android:icon="@drawable/player"
        android:label="@string/app_name"
        android:roundIcon="@drawable/player"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.madproject.spaceinvaders.activities.SpaceInvadersActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.madproject.spaceinvaders.activities.GameActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.madproject.spaceinvaders.activities.SettingsActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.madproject.spaceinvaders.activities.HighscoreActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>