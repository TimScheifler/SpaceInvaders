<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/space"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.madproject.spaceinvaders.activities.SpaceInvadersActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="67dp"
        android:layout_marginBottom="30dp"
        android:textStyle="bold"
        android:text="@string/credits"
        android:fontFamily="serif-monospace"
        android:textColor="@color/colorSnow"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="67dp"
        android:layout_marginBottom="30dp"
        android:textStyle="bold"
        android:text="Ingame Graphic: Johanna Schupp\nPodium: Johanna Schupp\nBackground: Veronica Alexandra (pinterest.de)\nLasersound: joboro (freesound.org)"
        android:fontFamily="serif-monospace"
        android:textColor="@color/colorSnow"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back_button" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="210dp"
        android:layout_height="43dp"
        android:layout_marginTop="24dp"
        android:text="@string/back"
        android:background="@drawable/default_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

</androidx.constraintlayout.widget.ConstraintLayout>